<Configuration status="WARN">
<Appenders>
    <RollingRandomAccessFile name="MonitoringCustomConfig"
            fileName="monitoringData/monitoringFile.data"
            filePattern="monitoringData/toSend/data-%d{yyyy-MM-dd-HH-mm-ss}.data.gz">
        <PatternLayout>
            <Pattern>%m --- %n</Pattern>
        </PatternLayout>
        <Policies>
            <CronTriggeringPolicy schedule="*/10 * * * * ?"/>
        </Policies>

    </RollingRandomAccessFile >

    <Async name="AsyncAppender" bufferSize="8096">
        <AppenderRef ref="MonitoringCustomConfig"/>
    </Async>
</Appenders>

<Loggers>
    <Root level="info">
        <AppenderRef ref="AsyncAppender"/>
    </Root>
</Loggers>
</Configuration>